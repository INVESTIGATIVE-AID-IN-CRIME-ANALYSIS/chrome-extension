{
  "manifest_version": 2,

  "name": "ORCA - Community Focused Satefy Extension",
  "description": "A safety tool for the Digital World",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon-32.png",
    "default_title": "ORCA",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "chrome://favicon/",
    "clipboardWrite",
    "geolocation"
  ],
  "content_security_policy": "script-src 'self' https://maxcdn.bootstrapcdn.com/* https://code.jquery.com/* https://cdnjs.cloudflare.com; object-src 'self'"
}
